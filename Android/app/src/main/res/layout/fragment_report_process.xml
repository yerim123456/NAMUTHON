<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_report_done_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:src="@drawable/ic_report_done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/iv_report_done_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/report_process_guide"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Namuthon.Title"
            app:layout_constraintEnd_toEndOf="@+id/iv_report_done_icon"
            app:layout_constraintStart_toStartOf="@+id/iv_report_done_icon"
            app:layout_constraintTop_toBottomOf="@+id/iv_report_done_icon" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>