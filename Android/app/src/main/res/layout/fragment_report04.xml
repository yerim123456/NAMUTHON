<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/ab_report04_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Theme.Toolbar"
            app:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_report04_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="left"
                android:background="?attr/colorPrimary">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_report_back_arrow" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/report_main_title"
                    android:textAppearance="@style/TextAppearance.Namuthon.Title"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/iv_report04_ball_04"
            android:layout_width="11dp"
            android:layout_height="0dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/shape_report_oval_sub_2"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_report04_ball_01" />

        <ImageView
            android:id="@+id/iv_report04_ball_03"
            android:layout_width="11dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/shape_report_oval_sub_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/iv_report04_ball_04"
            app:layout_constraintTop_toTopOf="@id/iv_report04_ball_01" />

        <ImageView
            android:id="@+id/iv_report04_ball_02"
            android:layout_width="11dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/shape_report_oval_sub_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/iv_report04_ball_03"
            app:layout_constraintTop_toTopOf="@id/iv_report04_ball_01" />

        <ImageView
            android:id="@+id/iv_report04_ball_01"
            android:layout_width="11dp"
            android:layout_height="0dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/shape_report_oval_sub_1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/iv_report04_ball_02"
            app:layout_constraintTop_toBottomOf="@id/ab_report04_appbar" />

        <TextView
            android:id="@+id/tv_report04_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="@string/report04_title"
            android:textAppearance="@style/TextAppearance.Namuthon.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ab_report04_appbar" />


        

        <TextView
            android:id="@+id/tv_report04_next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="66dp"
            android:background="@drawable/shape_report_next_button"
            android:paddingVertical="8dp"
            android:text="@string/report_next"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Namuthon.Title"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_report04_charter_none_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/shape_report_check_box_2"
            android:paddingVertical="13dp"
            android:layout_marginTop="20dp"
            android:paddingStart="15dp"
            android:text="@string/report04_adress"
            android:textAppearance="@style/TextAppearance.Namuthon.Title"
            android:textColor="@color/main_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_report04_title" />

        <EditText
            android:id="@+id/et_report04_adress_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="주소를 입력해주세요"
            android:textSize="16sp"
            android:paddingHorizontal="10dp"
            android:background="@null"
            android:paddingVertical="10dp"
            app:layout_constraintTop_toTopOf="@id/tv_report04_charter_none_textview"
            app:layout_constraintBottom_toBottomOf="@id/tv_report04_charter_none_textview"
            app:layout_constraintStart_toStartOf="@id/tv_report04_charter_none_textview"
            android:layout_marginStart="70dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>